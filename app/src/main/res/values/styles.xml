<resources>

    <!-- Base application theme. -->
    <style name="WordChunksAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/background_main</item>
    </style>

    <style name="WordChunksAppTheme.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CustomButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:padding">@dimen/cbtn_padding</item>
    </style>


</resources>
