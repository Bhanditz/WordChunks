<resources>

    <!-- Base application theme. -->
    <style name="WordChunksAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/main</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CustomButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:padding">@dimen/cbtn_padding</item>
    </style>

    <style name="CustomProgressDialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogSpotColor">@color/shape_btn_packs</item>
        <item name="DialogSpotCount">5</item>
        <item name="android:fontFamily">@font/vag</item>
    </style>

    <color name="main">#4c546a</color>
</resources>
