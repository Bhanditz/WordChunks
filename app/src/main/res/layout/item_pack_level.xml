<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="40dp"
    android:layout_marginStart="40dp"
    android:layout_marginTop="15dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvItemNum"
        fontPath="fonts/nunitoextrabold.ttf"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:gravity="end"
        android:textColor="@color/item_number_txt"
        android:textSize="18sp"
        tools:text="12." />

    <android.support.v7.widget.CardView
        android:id="@+id/cvItem"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="3dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/btn_background_main"
        app:cardCornerRadius="14dp"
        app:cardElevation="@dimen/cbtn_elevation">

        <ImageView
            android:id="@+id/imgRectBg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/pack_left_rect_locked" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:orientation="vertical"
            android:paddingEnd="17dp">

            <TextView
                android:id="@+id/tvItemTitle"
                fontPath="fonts/nunitoextrabold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pack_title_txt_locked"
                android:textSize="20sp"
                tools:text="AZURE" />

            <TextView
                android:id="@+id/tvItemSubtitle"
                fontPath="fonts/nunitosemibold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:textColor="@color/pack_title_txt_locked"
                android:textSize="11sp"
                tools:text="13/13" />

        </LinearLayout>

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_locked" />

    </android.support.v7.widget.CardView>
</LinearLayout>