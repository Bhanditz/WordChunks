<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentGame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvSolutions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitoblack"
            android:gravity="center_horizontal"
            android:letterSpacing="0.2"
            android:paddingBottom="20dp"
            android:text="@string/solutions"
            android:textColor="#4d6c96"
            android:textSize="10dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvWords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSolutions"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            tools:layout_height="150dp"
            tools:listitem="@layout/item_word" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llPackBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_game"
        android:orientation="vertical"
        android:paddingTop="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_shadow"
                android:contentDescription="@null" />

            <LinearLayout
                android:id="@+id/llInputForm"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:paddingEnd="10dp"
                android:paddingLeft="18dp"
                android:paddingRight="10dp"
                android:paddingStart="18dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgHint"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/shuffle_hint_rect"
                        android:contentDescription="@string/hint"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:paddingBottom="4dp"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp"
                        app:srcCompat="@drawable/ic_hint" />

                    <ImageView
                        android:id="@+id/imgHintHolder"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignEnd="@+id/imgHint"
                        android:layout_alignRight="@+id/imgHint"
                        app:srcCompat="@drawable/ic_hint" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/input_form_rect"
                    android:paddingBottom="4dp"
                    android:paddingEnd="6dp"
                    android:paddingStart="6dp">

                    <ImageView
                        android:id="@+id/imgClear"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:contentDescription="@string/clear"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/ic_clear"
                        tools:visibility="visible" />

                    <me.grantland.widget.AutofitLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/tvInputChunks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:ellipsize="none"
                            android:fontFamily="@font/nunitoblack"
                            android:paddingEnd="30dp"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:paddingStart="30dp"
                            android:singleLine="true"
                            android:textColor="#263238"
                            android:textSize="22dp"
                            tools:text="WORDAAAAAAAAAAAAAAA" />

                    </me.grantland.widget.AutofitLayout>

                    <ImageView
                        android:id="@+id/imgChunksCount"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_0"
                        android:visibility="invisible"
                        tools:visibility="visible" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/imgShuffle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/shuffle_hint_rect"
                    android:contentDescription="@string/shuffle"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:paddingBottom="4dp"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    app:srcCompat="@drawable/ic_shuffle" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:background="@drawable/main_shadow"
                android:contentDescription="@null"
                android:rotation="180" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvChunks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llInputForm"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingTop="16dp"
                tools:listitem="@layout/item_chunk" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>