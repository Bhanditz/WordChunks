<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentGame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:paddingEnd="@dimen/toolbar_padding"
        android:paddingStart="@dimen/toolbar_padding">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:src="@drawable/game_top_toolbar" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back_hint"
            android:onClick="onBackArrowClick"
            android:src="@drawable/ic_action_back" />

        <TextView
            android:id="@+id/tvLevelClueTitle"
            fontPath="fonts/nunitoextrabold.ttf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/title_txt"
            android:textSize="@dimen/toolbar_title_txt_size"
            tools:ignore="MissingPrefix"
            tools:text="HUMAN BODY" />

    </RelativeLayout>

    <TextView
        fontPath="fonts/nunitoextrabold.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:letterSpacing="0.2"
        android:text="@string/solutions"
        android:textColor="#4d6c96"
        android:textSize="9sp"
        tools:ignore="MissingPrefix" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvWords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        tools:layout_height="150dp"
        tools:listitem="@layout/item_word" />

    <LinearLayout
        android:id="@+id/llPackBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_game"
        android:orientation="vertical"
        android:paddingTop="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top"
                android:contentDescription="@null" />

            <LinearLayout
                android:id="@+id/llInputForm"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:paddingEnd="10dp"
                android:paddingStart="10dp">

                <ImageView
                    android:id="@+id/imgHint"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/shuffle_hint_rect"
                    android:contentDescription="@string/hint"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:paddingBottom="4dp"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:src="@drawable/ic_hint" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/input_form_rect">

                    <TextView
                        android:id="@+id/tvInputChunks"
                        fontPath="fonts/nunitoblack.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingBottom="4dp"
                        android:textColor="#263238"
                        android:textSize="22sp"
                        tools:ignore="MissingPrefix"
                        tools:text="WORDCHUNKSAA" />

                    <ImageView
                        android:id="@+id/imgClear"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/clear"
                        android:paddingBottom="4dp"
                        android:paddingEnd="6dp"
                        android:src="@drawable/ic_clear"
                        android:visibility="invisible"
                        tools:visibility="visible" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/imgShuffle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/shuffle_hint_rect"
                    android:contentDescription="@string/shuffle"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:paddingBottom="4dp"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:src="@drawable/ic_shuffle" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:background="@drawable/top"
                android:contentDescription="@null"
                android:rotation="180" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvChunks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llInputForm"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingTop="16dp"
                tools:listitem="@layout/item_chunk" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>