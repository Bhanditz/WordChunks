<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#37474f">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/llSlidingMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_settings_dark"
            android:fontFamily="@font/nunitoblack"
            android:paddingTop="20dp"
            android:text="@string/settings_hint"
            android:textColor="#212b2f"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingEnd="20dp"
            android:paddingStart="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="6dp"
                android:drawableStart="@drawable/ic_user"
                android:fontFamily="@font/nunitoblack"
                android:text="@string/authentication"
                android:textColor="#212b2f"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvProvider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/rect_sign_out"
                    android:fontFamily="@font/nunitobold"
                    android:paddingBottom="2dp"
                    android:paddingEnd="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingStart="5dp"
                    android:paddingTop="2dp"
                    android:textColor="#ffffff"
                    android:textSize="10dp"
                    tools:text="Google" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/nunitobold"
                    android:text="ID: "
                    android:textColor="#ffffff"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tvUserId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitosemibold"
                    android:singleLine="true"
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    tools:text="12345678..." />

            </LinearLayout>

            <TextView
                android:id="@+id/tvSignOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rect_sign_out"
                android:drawableLeft="@drawable/ic_sign_out"
                android:drawablePadding="10dp"
                android:fontFamily="@font/nunitosemibold"
                android:paddingBottom="5dp"
                android:paddingEnd="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingStart="20dp"
                android:paddingTop="5dp"
                android:text="Sign Out"
                android:textColor="#ffffff"
                android:textSize="12dp" />

            <LinearLayout
                android:id="@+id/btns_group_social"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgGoogleSettings"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rect_google"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_google" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/imgFacebookSettings"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:alpha="0.2"
                    android:background="@drawable/rect_facebook"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_facebook" />

                <ImageView
                    android:id="@+id/imgTwitterSettings"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:alpha="0.1"
                    android:background="@drawable/rect_twitter"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_twitter" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_lang"
                android:drawablePadding="6dp"
                android:drawableStart="@drawable/ic_lang"
                android:fontFamily="@font/nunitoblack"
                android:text="@string/language"
                android:textColor="#212b2f"
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/RGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioButtonEn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_us_flag"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_us_flag"
                    android:fontFamily="@font/nunitobold"
                    android:padding="5dp"
                    android:text="@string/english"
                    android:textSize="14dp" />

                <RadioButton
                    android:id="@+id/radioButtonRu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:drawableLeft="@drawable/ic_rus_flag"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_rus_flag"
                    android:padding="5dp"
                    android:text="@string/russian"
                    android:textSize="14dp" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgFeedback"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_packs_rect"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_feedback" />

                <ImageView
                    android:id="@+id/imgHowToPlay"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_daily_rect"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_how_to_play" />

                <ImageView
                    android:id="@+id/imgRateUs"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_store_rect"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_rate" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/nunitosemibold"
            android:textColor="#212b2f"
            android:textSize="13dp"
            tools:text="ver. 1.2.beta" />

    </LinearLayout>

</ScrollView>