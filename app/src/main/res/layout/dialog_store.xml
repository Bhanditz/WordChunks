<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_dialog_store"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/vag"
        android:gravity="center_horizontal"
        android:text="YOU HAVE 2 HINTS"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/vag"
        android:gravity="center_horizontal"
        android:text="BUY SOME AND LET'S PLAY!"
        android:textColor="#f4f4f4"
        android:textSize="14dp" />

    <com.appchamp.wordchunks.ui.customviews.CustomButtonSubtitle
        style="@style/CustomButtonStyle"
        app:cbs_bg="@drawable/shape_btn_store"
        app:cbs_color_subtitle="#b0dab2"
        app:cbs_color_title="@color/store_txt_color"
        app:cbs_icon="@drawable/ic_video"
        app:cbs_subtitle="WATCH A VIDEO!"
        app:cbs_title="1 FREE HINT!" />

    <com.appchamp.wordchunks.ui.customviews.CustomButtonSubtitle
        style="@style/CustomButtonStyle"
        app:cbs_bg="@drawable/shape_btn_packs"
        app:cbs_color_subtitle="#6bcff6"
        app:cbs_color_title="@color/packs_txt_color"
        app:cbs_icon="@drawable/ic_20"
        app:cbs_subtitle="$0.99"
        app:cbs_title="20 HINTS" />

    <com.appchamp.wordchunks.ui.customviews.CustomButtonSubtitle
        style="@style/CustomButtonStyle"
        app:cbs_bg="@drawable/shape_btn_daily"
        app:cbs_color_subtitle="#faa750"
        app:cbs_color_title="@color/daily_txt_color"
        app:cbs_icon="@drawable/ic_50"
        app:cbs_subtitle="$1.99"
        app:cbs_title="50 HINTS" />

    <com.appchamp.wordchunks.ui.customviews.CustomButtonSubtitle
        style="@style/CustomButtonStyle"
        android:layout_marginBottom="5dp"
        app:cbs_bg="@drawable/shape_btn_play"
        app:cbs_color_subtitle="#f16d97"
        app:cbs_color_title="@color/play_txt_color"
        app:cbs_icon="@drawable/ic_150"
        app:cbs_subtitle="$4.99"
        app:cbs_title="150 HINTS" />

    <TextView
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:background="@drawable/shape_dialog_button"
        android:fontFamily="@font/vag"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="bottom|center"
        android:padding="5dp"
        android:text="CLOSE"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="22dp" />

</LinearLayout>