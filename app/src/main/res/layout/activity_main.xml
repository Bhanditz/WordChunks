<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/settings_imageview"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="start"
        android:layout_margin="12dp"
        android:contentDescription="@string/settings_hint"
        android:onClick="onSettingsClick"
        android:src="@drawable/ic_settings_white_24dp" />

    <!--
    Kitty image from:
    http://randomrobskii.deviantart.com/art/Kitty-Cat-408720148
    -->
    <ImageView
        android:id="@+id/kitty_img"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:onClick="onKittyClick"
        android:src="@drawable/cat" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/nunitoblack"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/play_btn"
            style="@style/PlayButtonStyle"
            android:onClick="onPlayClick" />

        <Button
            android:id="@+id/daily_btn"
            style="@style/DailyButtonStyle"
            android:onClick="onDailyClick" />

        <Button
            android:id="@+id/shop_btn"
            style="@style/ShopButtonStyle"
            android:onClick="onShopClick" />

    </LinearLayout>

</LinearLayout>