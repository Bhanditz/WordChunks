<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/level_finish_screen_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height">

            <TextView
                fontPath="fonts/nunitoextrabold.ttf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/level_finished"
                android:textColor="@color/title_txt"
                android:textSize="@dimen/toolbar_title_txt_size" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp"
                android:src="@drawable/ic_fav" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/trophy" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPackBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00bdbd"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#70000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:contentDescription="@null"
                android:paddingEnd="40dp"
                android:paddingStart="40dp"
                android:src="@drawable/ribbon" />

            <TextView
                android:id="@+id/tvExcellent"
                fontPath="fonts/nunitoblack.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:text="EXCELLENT!"
                android:textColor="#263238"
                android:textSize="20sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvFunFactTitle"
            fontPath="fonts/nunitoextrabold.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#70000000"
            android:gravity="center"
            android:letterSpacing="0.2"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="@string/fun_fact"
            android:textColor="#00bdbd"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvFunFact"
            fontPath="fonts/nunitosemibold.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2d2d2d"
            android:paddingBottom="10dp"
            android:paddingEnd="50dp"
            android:paddingStart="50dp"
            android:paddingTop="10dp"
            android:text="The sentence “The quick brown fox jumps over a lazy dog.” uses every letter of the alphabet."
            android:textColor="#e3e4e4"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginBottom="50dp"
            android:background="#70000000" />

        <android.support.v7.widget.CardView
            android:id="@+id/cvNextLevel"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="#2d2d2d"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/next_level_left_rect" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:orientation="vertical"
                android:paddingEnd="17dp">

                <TextView
                    fontPath="fonts/nunitoextrabold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/next_level"
                    android:textColor="#f1c40f"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvNextLevelClue"
                    fontPath="fonts/nunitosemibold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:text="ANIMALS"
                    android:textColor="#b5b5b5"
                    android:textSize="11sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="@string/next_level"
                android:scaleType="centerInside"
                android:src="@drawable/ic_next" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tvLevelsLeft"
            fontPath="fonts/nunitobold.ttf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingBottom="10dp"
            android:text="5 LEVELS LEFT IN PACK"
            android:textAlignment="center"
            android:textColor="@color/btn_background_main"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>