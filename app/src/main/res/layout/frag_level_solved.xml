<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/level_finish_screen_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height">

            <TextView
                fontPath="fonts/nunitoextrabold.ttf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/level_finished"
                android:textColor="@color/title_txt"
                android:textSize="@dimen/toolbar_title_txt_size" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp"
                android:src="@drawable/ic_fav" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/trophy" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPackBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:background="#00bdbd">

        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="#70000000" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:contentDescription="@null"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:src="@drawable/ribbon" />

            <TextView
                android:id="@+id/tvExcellent"
                fontPath="fonts/nunitoblack.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:textColor="#263238"
                android:textSize="20sp"
                tools:text="EXCELLENT!" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="#70000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2d2d2d"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            app:cardBackgroundColor="#363636"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/tvFunFactTitle"
                fontPath="fonts/nunitoblack.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:letterSpacing="0.2"
                android:paddingBottom="10dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:text="@string/fun_fact"
                android:textSize="12sp"
                tools:textColor="#00bdbd" />

            <TextView
                android:id="@+id/tvFunFact"
                fontPath="fonts/nunitosemibold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingBottom="20dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="30dp"
                android:textColor="#e3e4e4"
                android:textSize="14sp"
                tools:text="The sentence “The quick brown fox jumps over a lazy dog.” uses every letter of the alphabet." />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cvRateUs"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="#363636"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/next_level_left_rect" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:orientation="vertical"
                android:paddingEnd="17dp">

                <TextView
                    fontPath="fonts/nunitoextrabold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/next_level"
                    android:textColor="#f1c40f"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvSubtitle"
                    fontPath="fonts/nunitosemibold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:textColor="#b5b5b5"
                    android:textSize="11sp"
                    tools:text="ANIMALS" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="@string/next_level"
                android:scaleType="centerInside"
                android:src="@drawable/ic_next" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-40dp"
        android:background="#232323"
        android:gravity="center">

        <TextView
            android:id="@+id/tvLevelsLeft"
            fontPath="fonts/nunitobold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="#aaaaaa"
            android:textSize="12sp"
            tools:text="5 LEVELS LEFT IN PACK" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@id/tvLevelsLeft"
            android:contentDescription="@null"
            android:src="@drawable/ic_info" />

    </RelativeLayout>

</LinearLayout>